<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/layout"
    android:background="@color/app_color"
android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:id="@+id/splash_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginBottom="30dp"
        android:background="@drawable/splash_1" />

    <ImageView
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/line_3"
        android:id="@+id/splash_line"

        android:layout_marginBottom="50dp"
    android:layout_gravity="center"
    />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TG CONNECT"
            android:id="@+id/splash_textview"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:id="@+id/splash_button"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textSize="20dp"
            android:textColor="@color/app_color"
            android:background="@drawable/white_rounded_edit_text"/>
    </LinearLayout>
    </LinearLayout>